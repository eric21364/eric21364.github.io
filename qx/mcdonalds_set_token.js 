let showNotification = true;

function surgeNotify(subtitle = '', message = '') {
   $notify('ğŸŸ éº¥ç•¶å‹ token', subtitle, message, { 'url': 'mcdonalds.app://' });
};

function handleError(error) {
  if (Array.isArray(error)) {
    console.log(`âŒ ${error[0]} ${error[1]}`);
    if (showNotification) {
      surgeNotify(error[0], error[1]);
    }
  } else {
    console.log(`âŒ ${error}`);
    if (showNotification) {
      surgeNotify(error);
    }
  }
}

function getSaveObject(key) {
  const string = $prefs.valueForKey(key);
  return !string || string.length === 0 ? {} : JSON.parse(string);
}

async function saveToken() {
  return new Promise((resolve, reject) => {
    try {
      if (token.length === 0 || token === 'æ”¹æ‰é€™ä¸€è¡Œ') {
        return reject(['ä¿å­˜å¤±æ•— â€¼ï¸', 'è«‹å…ˆè¨­å®š token']);
      }
      let mcdonaldsInfo = getSaveObject('McdonaldsInfo');
      mcdonaldsInfo.token = token;
      const save = $prefs.setValueForKey(JSON.stringify(mcdonaldsInfo, null, 4), 'McdonaldsInfo');
      if (!save) {
        return reject(['ä¿å­˜å¤±æ•— â€¼ï¸', 'ç„¡æ³•å„²å­˜ token']);
      } else {
        return resolve();
      }
    } catch (error) {
      return reject(['ä¿å­˜å¤±æ•— â€¼ï¸', error]);
    }
  });
}

